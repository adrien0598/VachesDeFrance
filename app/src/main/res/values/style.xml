<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonTest" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@color/clic</item>
    </style>

    <style name="Theme.VachesDeFrance.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.VachesDeFrance.TextAppearance.TitleH2" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="Theme.VachesDeFrance.TextAppearance.TitleH3" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="Theme.VachesDeFrance.TextAppearance.Content" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="Theme.VachesDeFrance.TextAppearance.Score" parent="Theme.VachesDeFrance.TextAppearance.Content">
        <item name="android:textSize">@dimen/text_size_score</item>
    </style>
</resources>