<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.VachesDeFrance.ButtonLvlLocked" parent="Widget.Material3.Button">
        <item name="cornerRadius">15dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/grey</item>
    </style>

    <style name="Theme.VachesDeFrance.ButtonLvlUnlocked" parent="Widget.Material3.Button">
        <item name="cornerRadius">15dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/brown</item>
    </style>

    <style name="Theme.VachesDeFrance.ButtonLvlCompleted" parent="Widget.Material3.Button">
        <item name="cornerRadius">15dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.VachesDeFrance.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">30dp</item>
    </style>

    <style name="Theme.VachesDeFrance.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">30dp</item>
    </style>

    <style name="Theme.VachesDeFrance.Button.Answer" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/greyT</item>
        <item name="strokeWidth">2.5dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="Theme.VachesDeFrance.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.VachesDeFrance.TextAppearance.TitleH2" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="Theme.VachesDeFrance.TextAppearance.Carac" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">@dimen/text_size_carac</item>
        <item name="android:textColor">@color/grey2</item>
    </style>

    <style name="Theme.VachesDeFrance.TextAppearance.TitleH3" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="Theme.VachesDeFrance.TextAppearance.Content" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="Theme.VachesDeFrance.TextAppearance.Score" parent="Theme.VachesDeFrance.TextAppearance.Content">
        <item name="android:textSize">@dimen/text_size_score</item>
    </style>
</resources>