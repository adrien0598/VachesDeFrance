<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BestScore">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_haut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_gauche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_droite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_midg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.275" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_midd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.725" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_mid1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_mid2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_mid3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.42" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_mid4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.54" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_mid5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_mid6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.78" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_special"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/carac"
        style="@style/Theme.VachesDeFrance.TextAppearance.TitleH3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_xlarge"
        android:text="@string/carac"
        app:layout_constraintStart_toEndOf="@+id/level"
        app:layout_constraintEnd_toStartOf="@+id/photo"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/photo"
        style="@style/Theme.VachesDeFrance.TextAppearance.TitleH3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photo"
        app:layout_constraintBottom_toBottomOf="@+id/carac"
        app:layout_constraintStart_toEndOf="@+id/carac"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/carac" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/carac"
        android:text="Niveau"
        app:layout_constraintTop_toTopOf="@+id/carac"
        app:layout_constraintBottom_toBottomOf="@id/carac"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/level_1"
        style="@style/Theme.VachesDeFrance.TextAppearance.Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_xlarge"
        android:text="1"
        app:layout_constraintStart_toStartOf="@+id/level"
        app:layout_constraintEnd_toEndOf="@+id/level"
        app:layout_constraintTop_toBottomOf="@+id/level" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/carac_1"
        style="@style/Theme.VachesDeFrance.TextAppearance.Score"
        android:layout_width="@dimen/size_score"
        android:layout_height="@dimen/size_score"
        android:background="@color/grey"
        android:gravity="center"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/level_1"
        app:layout_constraintStart_toStartOf="@+id/carac"
        app:layout_constraintEnd_toEndOf="@+id/carac"
        app:layout_constraintTop_toTopOf="@+id/level_1" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/photo_1"
        style="@style/Theme.VachesDeFrance.TextAppearance.Score"
        android:layout_width="@dimen/size_score"
        android:layout_height="@dimen/size_score"
        android:background="@color/grey"
        android:gravity="center"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/level_1"
        app:layout_constraintStart_toStartOf="@+id/photo"
        app:layout_constraintEnd_toEndOf="@+id/photo"
        app:layout_constraintTop_toTopOf="@+id/level_1" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/level_2"
        style="@style/Theme.VachesDeFrance.TextAppearance.Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_xlarge"
        android:text="2"
        app:layout_constraintStart_toStartOf="@+id/level"
        app:layout_constraintEnd_toEndOf="@+id/level"
        app:layout_constraintTop_toBottomOf="@+id/level_1" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/carac_2"
        style="@style/Theme.VachesDeFrance.TextAppearance.Score"
        android:layout_width="@dimen/size_score"
        android:layout_height="@dimen/size_score"
        android:background="@color/grey"
        android:gravity="center"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/level_2"
        app:layout_constraintStart_toStartOf="@+id/carac"
        app:layout_constraintEnd_toEndOf="@+id/carac"
        app:layout_constraintTop_toTopOf="@+id/level_2" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/photo_2"
        style="@style/Theme.VachesDeFrance.TextAppearance.Score"
        android:layout_width="@dimen/size_score"
        android:layout_height="@dimen/size_score"
        android:background="@color/grey"
        android:gravity="center"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/level_2"
        app:layout_constraintStart_toStartOf="@+id/photo"
        app:layout_constraintEnd_toEndOf="@+id/photo"
        app:layout_constraintTop_toTopOf="@+id/level_2" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/level_3"
        style="@style/Theme.VachesDeFrance.TextAppearance.Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_xlarge"
        android:text="3"
        app:layout_constraintStart_toStartOf="@+id/level"
        app:layout_constraintEnd_toEndOf="@+id/level"
        app:layout_constraintTop_toBottomOf="@+id/level_2" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/carac_3"
        style="@style/Theme.VachesDeFrance.TextAppearance.Score"
        android:layout_width="@dimen/size_score"
        android:layout_height="@dimen/size_score"
        android:background="@color/grey"
        android:gravity="center"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/level_3"
        app:layout_constraintStart_toStartOf="@+id/carac"
        app:layout_constraintEnd_toEndOf="@+id/carac"
        app:layout_constraintTop_toTopOf="@+id/level_3" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/photo_3"
        style="@style/Theme.VachesDeFrance.TextAppearance.Score"
        android:layout_width="@dimen/size_score"
        android:layout_height="@dimen/size_score"
        android:background="@color/grey"
        android:gravity="center"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/level_3"
        app:layout_constraintStart_toStartOf="@+id/photo"
        app:layout_constraintEnd_toEndOf="@+id/photo"
        app:layout_constraintTop_toTopOf="@+id/level_3" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/level_4"
        style="@style/Theme.VachesDeFrance.TextAppearance.Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_xlarge"
        android:text="4"
        app:layout_constraintStart_toStartOf="@+id/level"
        app:layout_constraintEnd_toEndOf="@+id/level"
        app:layout_constraintTop_toBottomOf="@+id/level_3" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/carac_4"
        style="@style/Theme.VachesDeFrance.TextAppearance.Score"
        android:layout_width="@dimen/size_score"
        android:layout_height="@dimen/size_score"
        android:background="@color/grey"
        android:gravity="center"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/level_4"
        app:layout_constraintStart_toStartOf="@+id/carac"
        app:layout_constraintEnd_toEndOf="@+id/carac"
        app:layout_constraintTop_toTopOf="@+id/level_4" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/photo_4"
        style="@style/Theme.VachesDeFrance.TextAppearance.Score"
        android:layout_width="@dimen/size_score"
        android:layout_height="@dimen/size_score"
        android:background="@color/grey"
        android:gravity="center"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/level_4"
        app:layout_constraintStart_toStartOf="@+id/photo"
        app:layout_constraintEnd_toEndOf="@+id/photo"
        app:layout_constraintTop_toTopOf="@+id/level_4" />

</androidx.constraintlayout.widget.ConstraintLayout>