<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".result.BestScoreFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_haut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_bas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.95" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_gauche"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_droite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/carac"
                style="@style/Theme.VachesDeFrance.TextAppearance.TitleH3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_xlarge"
                android:text="@string/carac"
                app:layout_constraintEnd_toStartOf="@+id/photo"
                app:layout_constraintStart_toEndOf="@+id/level"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/photo"
                style="@style/Theme.VachesDeFrance.TextAppearance.TitleH3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photo"
                app:layout_constraintBottom_toBottomOf="@+id/carac"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/carac"
                app:layout_constraintTop_toTopOf="@+id/carac" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Niveau"
                app:layout_constraintBottom_toBottomOf="@id/carac"
                app:layout_constraintEnd_toStartOf="@id/carac"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/carac" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/level_1"
                style="@style/Theme.VachesDeFrance.TextAppearance.Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_xlarge"
                android:text="1"
                app:layout_constraintEnd_toEndOf="@+id/level"
                app:layout_constraintStart_toStartOf="@+id/level"
                app:layout_constraintTop_toBottomOf="@+id/level" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/carac_1"
                style="@style/Theme.VachesDeFrance.TextAppearance.Score"
                android:layout_width="@dimen/size_score"
                android:layout_height="@dimen/size_score"
                android:background="@color/grey"
                android:gravity="center"
                tools:text="0"
                app:layout_constraintBottom_toBottomOf="@+id/level_1"
                app:layout_constraintEnd_toEndOf="@+id/carac"
                app:layout_constraintStart_toStartOf="@+id/carac"
                app:layout_constraintTop_toTopOf="@+id/level_1" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/photo_1"
                style="@style/Theme.VachesDeFrance.TextAppearance.Score"
                android:layout_width="@dimen/size_score"
                android:layout_height="@dimen/size_score"
                android:background="@color/grey"
                android:gravity="center"
                tools:text="0"
                app:layout_constraintBottom_toBottomOf="@+id/level_1"
                app:layout_constraintEnd_toEndOf="@+id/photo"
                app:layout_constraintStart_toStartOf="@+id/photo"
                app:layout_constraintTop_toTopOf="@+id/level_1" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/level_2"
                style="@style/Theme.VachesDeFrance.TextAppearance.Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_xlarge"
                android:text="2"
                app:layout_constraintEnd_toEndOf="@+id/level"
                app:layout_constraintStart_toStartOf="@+id/level"
                app:layout_constraintTop_toBottomOf="@+id/level_1" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/carac_2"
                style="@style/Theme.VachesDeFrance.TextAppearance.Score"
                android:layout_width="@dimen/size_score"
                android:layout_height="@dimen/size_score"
                android:background="@color/grey"
                android:gravity="center"
                tools:text="0"
                app:layout_constraintBottom_toBottomOf="@+id/level_2"
                app:layout_constraintEnd_toEndOf="@+id/carac"
                app:layout_constraintStart_toStartOf="@+id/carac"
                app:layout_constraintTop_toTopOf="@+id/level_2" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/photo_2"
                style="@style/Theme.VachesDeFrance.TextAppearance.Score"
                android:layout_width="@dimen/size_score"
                android:layout_height="@dimen/size_score"
                android:background="@color/grey"
                android:gravity="center"
                tools:text="0"
                app:layout_constraintBottom_toBottomOf="@+id/level_2"
                app:layout_constraintEnd_toEndOf="@+id/photo"
                app:layout_constraintStart_toStartOf="@+id/photo"
                app:layout_constraintTop_toTopOf="@+id/level_2" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/level_3"
                style="@style/Theme.VachesDeFrance.TextAppearance.Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_xlarge"
                android:text="3"
                app:layout_constraintEnd_toEndOf="@+id/level"
                app:layout_constraintStart_toStartOf="@+id/level"
                app:layout_constraintTop_toBottomOf="@+id/level_2" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/carac_3"
                style="@style/Theme.VachesDeFrance.TextAppearance.Score"
                android:layout_width="@dimen/size_score"
                android:layout_height="@dimen/size_score"
                android:background="@color/grey"
                android:gravity="center"
                tools:text="0"
                app:layout_constraintBottom_toBottomOf="@+id/level_3"
                app:layout_constraintEnd_toEndOf="@+id/carac"
                app:layout_constraintStart_toStartOf="@+id/carac"
                app:layout_constraintTop_toTopOf="@+id/level_3" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/photo_3"
                style="@style/Theme.VachesDeFrance.TextAppearance.Score"
                android:layout_width="@dimen/size_score"
                android:layout_height="@dimen/size_score"
                android:background="@color/grey"
                android:gravity="center"
                tools:text="0"
                app:layout_constraintBottom_toBottomOf="@+id/level_3"
                app:layout_constraintEnd_toEndOf="@+id/photo"
                app:layout_constraintStart_toStartOf="@+id/photo"
                app:layout_constraintTop_toTopOf="@+id/level_3" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/level_4"
                style="@style/Theme.VachesDeFrance.TextAppearance.Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_xlarge"
                android:text="4"
                app:layout_constraintEnd_toEndOf="@+id/level"
                app:layout_constraintStart_toStartOf="@+id/level"
                app:layout_constraintTop_toBottomOf="@+id/level_3" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/carac_4"
                style="@style/Theme.VachesDeFrance.TextAppearance.Score"
                android:layout_width="@dimen/size_score"
                android:layout_height="@dimen/size_score"
                android:background="@color/grey"
                android:gravity="center"
                tools:text="0"
                app:layout_constraintBottom_toBottomOf="@+id/level_4"
                app:layout_constraintEnd_toEndOf="@+id/carac"
                app:layout_constraintStart_toStartOf="@+id/carac"
                app:layout_constraintTop_toTopOf="@+id/level_4" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/photo_4"
                style="@style/Theme.VachesDeFrance.TextAppearance.Score"
                android:layout_width="@dimen/size_score"
                android:layout_height="@dimen/size_score"
                android:background="@color/grey"
                android:gravity="center"
                tools:text="0"
                app:layout_constraintBottom_toBottomOf="@+id/level_4"
                app:layout_constraintEnd_toEndOf="@+id/photo"
                app:layout_constraintStart_toStartOf="@+id/photo"
                app:layout_constraintTop_toTopOf="@+id/level_4" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/level_5"
                style="@style/Theme.VachesDeFrance.TextAppearance.Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_xlarge"
                android:text="5"
                app:layout_constraintEnd_toEndOf="@+id/level"
                app:layout_constraintStart_toStartOf="@+id/level"
                app:layout_constraintTop_toBottomOf="@+id/level_4" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/carac_5"
                style="@style/Theme.VachesDeFrance.TextAppearance.Score"
                android:layout_width="@dimen/size_score"
                android:layout_height="@dimen/size_score"
                android:background="@color/grey"
                android:gravity="center"
                tools:text="0"
                app:layout_constraintBottom_toBottomOf="@+id/level_5"
                app:layout_constraintEnd_toEndOf="@+id/carac"
                app:layout_constraintStart_toStartOf="@+id/carac"
                app:layout_constraintTop_toTopOf="@+id/level_5" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/photo_5"
                style="@style/Theme.VachesDeFrance.TextAppearance.Score"
                android:layout_width="@dimen/size_score"
                android:layout_height="@dimen/size_score"
                android:background="@color/grey"
                android:gravity="center"
                tools:text="0"
                app:layout_constraintBottom_toBottomOf="@+id/level_5"
                app:layout_constraintEnd_toEndOf="@+id/photo"
                app:layout_constraintStart_toStartOf="@+id/photo"
                app:layout_constraintTop_toTopOf="@+id/level_5" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/level_6"
                style="@style/Theme.VachesDeFrance.TextAppearance.Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_xlarge"
                android:text="6"
                app:layout_constraintEnd_toEndOf="@+id/level"
                app:layout_constraintStart_toStartOf="@+id/level"
                app:layout_constraintTop_toBottomOf="@+id/level_5" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/carac_6"
                style="@style/Theme.VachesDeFrance.TextAppearance.Score"
                android:layout_width="@dimen/size_score"
                android:layout_height="@dimen/size_score"
                android:background="@color/grey"
                android:gravity="center"
                tools:text="0"
                app:layout_constraintBottom_toBottomOf="@+id/level_6"
                app:layout_constraintEnd_toEndOf="@+id/carac"
                app:layout_constraintStart_toStartOf="@+id/carac"
                app:layout_constraintTop_toTopOf="@+id/level_6" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/photo_6"
                style="@style/Theme.VachesDeFrance.TextAppearance.Score"
                android:layout_width="@dimen/size_score"
                android:layout_height="@dimen/size_score"
                android:background="@color/grey"
                android:gravity="center"
                tools:text="0"
                app:layout_constraintBottom_toBottomOf="@+id/level_6"
                app:layout_constraintEnd_toEndOf="@+id/photo"
                app:layout_constraintStart_toStartOf="@+id/photo"
                app:layout_constraintTop_toTopOf="@+id/level_6" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/level_7"
                style="@style/Theme.VachesDeFrance.TextAppearance.Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_xlarge"
                android:text="7"
                app:layout_constraintEnd_toEndOf="@+id/level"
                app:layout_constraintStart_toStartOf="@+id/level"
                app:layout_constraintTop_toBottomOf="@+id/level_6" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/carac_7"
                style="@style/Theme.VachesDeFrance.TextAppearance.Score"
                android:layout_width="@dimen/size_score"
                android:layout_height="@dimen/size_score"
                android:background="@color/grey"
                android:gravity="center"
                tools:text="0"
                app:layout_constraintBottom_toBottomOf="@+id/level_7"
                app:layout_constraintEnd_toEndOf="@+id/carac"
                app:layout_constraintStart_toStartOf="@+id/carac"
                app:layout_constraintTop_toTopOf="@+id/level_7" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/photo_7"
                style="@style/Theme.VachesDeFrance.TextAppearance.Score"
                android:layout_width="@dimen/size_score"
                android:layout_height="@dimen/size_score"
                android:background="@color/grey"
                android:gravity="center"
                tools:text="0"
                app:layout_constraintBottom_toBottomOf="@+id/level_7"
                app:layout_constraintEnd_toEndOf="@+id/photo"
                app:layout_constraintStart_toStartOf="@+id/photo"
                app:layout_constraintTop_toTopOf="@+id/level_7" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>