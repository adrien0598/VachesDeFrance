<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/result_navigation"
    app:startDestination="@id/best_score_fragment">

    <fragment
        android:id="@+id/best_score_fragment"
        android:name="fr.odddd.vachesdefrance.result.BestScoreFragment"
        tools:layout="@layout/fragment_best_score" />

    <fragment
        android:id="@+id/best_time_fragment"
        android:name="fr.odddd.vachesdefrance.result.BestTimeFragment"
        tools:layout="@layout/fragment_best_time" />

    <action android:id="@+id/moveToBestScore"
        app:destination="@id/best_score_fragment"/>

    <action android:id="@+id/moveToBestTime"
        app:destination="@id/best_time_fragment"/>


</navigation>